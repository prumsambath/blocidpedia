<div class="row">
  <div class="col-md-6">
    <%= form_for @wiki do |f| %>
      <div class="form-group">
        <%= f.text_field :title, placeholder: 'Add title' %>
      </div>
      <div class="form-group">
        <%= f.text_area :body, placeholder: 'Raw Wiki', rows: 20, cols: 80 %>
      </div>
      <% unless current_user.standard? %>
        <div class="form-group">
          <%= f.check_box :private %>
          <%= f.label :private, 'Private Wiki' %>
        </div>
      <% end %>
      <div class="form-group">
        <%= f.submit 'Save wiki', class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
  <div class="col-md-6">
    <div class="output"></div>
    <a href="#" class="btn btn-primary" id="preview">Preview</a>
  </div>
</div>
