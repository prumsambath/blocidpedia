<div class="mainbox col-md-4">
  <div class="panel panel-info">
    <div class="panel-heading">
      <div class="panel-title">Profile</div>
    </div>
    <div class="panel-body">
      <%= form_for current_user do |f| %>
        <% if current_user.avatar? %>
          <div class="form-group">
            <p>Current avatar</p>
            <%= image_tag(current_user.avatar.profile.url) %>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.label :avatar %>
          <%= f.file_field :avatar %>
          <%= f.hidden_field :avatar_cache %>
        </div>

        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.submit "Update profile", class: 'btn btn-success' %>
        </div>
      <% end %>
      <p>
        Account Type: <%= current_user.role.capitalize %>
        <% if current_user.standard? %>
          <%= link_to 'Upgrade to Premium', checkout_path, method: :post %>
        <% else %>
          <%= link_to 'Downgrade to Standard', checkout_path, method: :delete %>
        <% end %>
      </p>
      <p>Member since <%= current_user.created_at.strftime("%B %m, %Y") %></p>

    </div>
  </div>
</div>