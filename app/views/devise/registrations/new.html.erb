<div class="container">
  <div id="loginbox" class="mainbox col-md-4 col-md-offset-4">
    <div class="panel panel-info">
      <div class="panel-heading">
        <div class="panel-title">Sign Up (<%= params[:plan] || 'free' %>)</div>
      </div>
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="form-group">
            <div class="input-group">
              <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
              <%= f.text_field :name, placeholder: 'Full name', autofocus: true, class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <div class="input-group">
              <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
              <%= f.email_field :email, placeholder: 'Email address',  class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <div class="input-group">
              <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
              <%= f.password_field :password, placeholder: 'Password', autocomplete: "off", class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <div class="input-group">
              <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
              <%= f.password_field :password_confirmation, placeholder: 'Password confirmation', autocomplete: "off", class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <%= f.submit "Sign up", class: 'btn btn-success' %>
          </div>

          <%= f.hidden_field :role, value: params[:plan] || "standard" %>

          <div class="form-group" id="links">
            Already have an account?
            <%= link_to "Sign in", new_session_path(resource_name) %><br />
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
