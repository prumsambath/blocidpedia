<div class="container">
  <div id="loginbox" class="mainbox col-md-4 col-md-offset-4">
    <div class="panel panel-info">
      <div class="panel-heading">
        <div class="panel-title">Sign In</div>
        <div id="forgot-password"><%= link_to 'Forgot password?', new_password_path(resource_name) %></div>
      </div>
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <div class="input-group">
              <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
              <%= f.email_field :email, placeholder: 'Email address', autofocus: true, class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <div class="input-group">
              <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
              <%= f.password_field :password, placeholder: 'Password', autocomplete: "off", class: 'form-control' %>
            </div>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="form-group">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>

          <div class="form-group">
            <%= f.submit "Log in", class: 'btn btn-success' %>
          </div>

          <div class="form-group" id="links">
            Don't have an account?
            <%= link_to "Sign up", new_registration_path(resource_name) %><br />
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
